package Newpro;

public class Forloop {
	public void loop1() {
		int a=0;
		for(a=0;a<5;a++) {
			System.out.println(a);
		}
	}
	public void loop2() {
		int a;
		for(a=1;a<30;a++) {
			if(a%2==0) {
				System.out.println("This is even :"+a);
			}
		}
	}
	public void loop3() {
		int a;
		for(a=1;a<30;a++) {
			if(a%2==1) {
				System.out.println("This is ODD :"+a);
			}
		}
	}
	public void loop4() {
		int a=1;
		while(a<=10) {
			System.out.println(a);
			a++;
		}
	}
	public void loop5() {
		int a=1;
		while(a<=10) {
			if(a%2==0) {
				System.out.println(a);
				
			}
			a++;
		}
	}
	public void sum() {
		int a=1;
		int evencount=0;
		int oddcount=0;
		while(a<=10) {
			if(a%2==0) {
				 evencount=evencount+1;
			}else {
				 oddcount=oddcount+1;
				
			}
			a++;
		}
		System.out.println("even number count :"+evencount);
		System.out.println("even odd count :"+oddcount);
	}
	
	
	
	
	
	public static void main(String[] args) {
		Forloop fb=new Forloop();
//		fb.loop1();
//		fb.loop2();
//		fb.loop3();
//		fb.loop4();
//		fb.loop5();
		fb.sum();
	}
}
