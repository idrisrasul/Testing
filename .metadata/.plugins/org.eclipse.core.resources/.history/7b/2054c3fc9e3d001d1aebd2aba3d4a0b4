package Newpro;

import java.util.Scanner;

public class DAYone {
	public int Rice() {
		Scanner sc=new Scanner(System.in);
		int Rice_price=sc.nextInt();
		System.out.println("Rice price is :"+Rice_price);
		int Rice_Qty=sc.nextInt();
		System.out.println("Rice QTY is :"+Rice_Qty);
		int total_price=Rice_price*Rice_Qty;
		System.out.println("Total rice price :"+total_price);
		return total_price;
	}
 
	public int MILK() {
		Scanner sc=new Scanner(System.in);
		int milk=sc.nextInt();
		System.out.println("milk price is :"+milk);
		int milk_Qty=sc.nextInt();
		System.out.println("milk QTY is :"+milk_Qty);
		int total_price=milk*milk_Qty;
		System.out.println("Total milk price :"+total_price);
		return total_price;
	}
	public static void main(String[] args) {
		DAYone rc=new DAYone();
		int rice=rc.Rice();
		int milk=rc.MILK();
		int grandtotal=rice+milk; 
		System.out.println("Grand Total :"+grandtotal);
	}
}
